<UserControl x:Class="ESRI.PrototypeLab.MosaicImageSelector.DropPrompt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200"
             Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="Resources/arcmap.png"/>
        <TextBlock Grid.Row="1" Text="Please drag and drop a mosaic or image service layer onto this window" Foreground="White" TextWrapping="Wrap" TextAlignment="Center"/>
    </Grid>
</UserControl>
